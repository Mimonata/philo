{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug Philo Threads",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/philo", // Path to your executable
		"args": ["5", "200", "200", "50"], // Pass the same arguments here
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": {},
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "set print pretty on",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "build",
		"miDebuggerPath": "/usr/bin/gdb",
		"logging": {
		  "engineLogging": true
		},
		"sourceFileMap": {
		  "/path/to/your/source": "${workspaceFolder}"
		},
		"osx": {
		  "gdb": "gdb"
		}
	  }
	]
  }  
